<h1 class="text-center mx-auto pt-5">Finantial Products</h1>

<%= link_to 'New Finantial Product', new_finantial_product_path, class:"btn btn-primary link-white mx-5 " %>

<div class="table-responsive p-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Url</th>
        <th>Visibility</th>
        <th>Institution type</th>
        <th>Product type</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @finantial_products.each do |finantial_product| %>
        <tr>
          <td><%= finantial_product.name %></td>
          <td><%= finantial_product.description %></td>
          <td><%= finantial_product.image %></td>
          <td><%= finantial_product.url %></td>
          <td><%= finantial_product.visibility %></td>
          <td><%= finantial_product.institution_type %></td>
          <td><%= finantial_product.product_type %></td>
          <td><%= link_to 'Show', finantial_product %></td>
          <td><%= link_to 'Edit', edit_finantial_product_path(finantial_product) %></td>
          <td><%= link_to 'Destroy', finantial_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>


<%= link_to 'Admin center', home_admin_path, class:"btn btn-secondary link-white mx-5 " %>
