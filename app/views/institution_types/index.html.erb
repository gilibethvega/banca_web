<h1 class="text-center mx-auto pt-5">Institution Types</h1>

<%= link_to 'New Institution Type', new_institution_type_path, class:"btn btn-primary link-white mx-5 " %>

<div class="table-responsive p-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action show</th>
        <th>Action edit</th>
        <th>Action destroy</th>
      </tr>
    </thead>

    <tbody>
      <% @institution_types.each do |institution_type| %>
        <tr>
          <td><%= institution_type.name %></td>
          <td><%= link_to 'Show', institution_type %></td>
          <td><%= link_to 'Edit', edit_institution_type_path(institution_type) %></td>
          <td><%= link_to 'Destroy', institution_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'Admin center', home_admin_path, class:"btn btn-secondary link-white mx-5 " %>


