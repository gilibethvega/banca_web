<h1 class="text-center mx-auto pt-5">Visa Types</h1>

<%= link_to 'New Visa Type', new_visa_type_path, class:"btn btn-primary link-white mx-5 " %>

<div class="table-responsive p-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @visa_types.each do |visa_type| %>
        <tr>
          <td><%= visa_type.name %></td>
          <td><%= link_to 'Show', visa_type %></td>
          <td><%= link_to 'Edit', edit_visa_type_path(visa_type) %></td>
          <td><%= link_to 'Destroy', visa_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Admin center', home_admin_path, class:"btn btn-secondary link-white mx-5 " %>
